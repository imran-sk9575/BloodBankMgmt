@*@model bloodbank.Models.RegistrationDetails*@
@using bloodbank.Models

@model RegistrationDetails
@{
    Layout = null;
    if (ViewBag.Message != null)
    {
        <span style="text-align:center; font-size:25px;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@ViewBag.Message</span>
    }
}
<HTML>
<HEAD>
    <TITLE>Blood Bank</TITLE>
    <link href="~/Content/bloodbank.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <style type="text/css">
        .error1 {
            color: red;
        }
    </style>
</HEAD>
<BODY style="background-image: url('../../bloodbank.jpg');">
    <div class="Bloodbank-container">
        <div class="sign-up-container">
            @*<div class="login-signup">
                    <a href="index.php">Login</a>
                </div>*@
            <div class="">
                @using (Html.BeginForm("UserRegistration", "Home", FormMethod.Post))
                {
                    <form name="sign-up">
                        <div class="signup-heading">Registration</div>
                        <div class="server-response success-msg"></div>
                        <div class="error-msg" id="error-msg"></div>
                        <div class="row">
                            <div class="inline-block">
                                <div class="form-label">
                                    Username<span class="required" id="username-info"></span>
                                </div>
                                @*<input class="input-box-330" type="text" name="username" id="username">*@
                                @Html.TextBoxFor(a => a.username, new { @class = "input-box-330", @placeholder = "User Name" })<br/>
                                @Html.ValidationMessageFor(a => a.username, "", new { @class = "error1" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="inline-block">
                                <div class="form-label">
                                    Email<span class="required" id="email-info"></span>
                                </div>
                                @*<input class="input-box-330" type="email" name="email" id="email">*@
                                @Html.TextBoxFor(a => a.email, new { @class = "input-box-330", @placeholder = "Email" })<br />
                                @Html.ValidationMessageFor(a => a.email, "", new { @class = "error1" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="inline-block">
                                <div class="form-label">
                                    Password<span class="required" id="signup-password-info"></span>
                                </div>
                                @*<input class="input-box-330" type="password" name="signup-password" id="signup-password">*@
                                @Html.PasswordFor(a => a.password, new { @class = "input-box-330", placeholder = "Password" })<br />
                                @Html.ValidationMessageFor(a => a.password, "", new { @class = "error1" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="inline-block">
                                <div class="form-label">
                                    Confirm Password<span class="required" id="confirm-password-info"></span>
                                </div>
                                @*<input class="input-box-330" type="password" name="confirm-password" id="confirm-password">*@
                                @Html.PasswordFor(a => a.CPassword, new { @class = "input-box-330", @placeholder = "confirm-password" })<br />
                                @Html.ValidationMessageFor(a => a.CPassword, "", new { @class = "error1" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="inline-block">
                                <div class="form-label">
                                    Role<span class="required" id="Role-info"></span>
                                </div>
                                @Html.DropDownListFor(m => m.Roles, new SelectList(Enum.GetValues(typeof(Role))), new { style = "width:250" })
                            </div>
                        </div>
                        <div class="row">
                            <input class="btn" type="submit" name="signup-btn" id="signup-btn" value="Sign up">
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</BODY>
</HTML>