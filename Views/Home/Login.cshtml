@using bloodbank.Models
@model  loginDetail
@{
    Layout = null;   
}  
<HTML>
<HEAD>
    <TITLE>Login</TITLE>
    <link href="~/Content/bloodbank.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js" type="text/javascript"></script>
    <style type="text/css">
        .error1 {
            color: red;
        }
    </style>
</HEAD>
<BODY style="background-image: url('../../bloodbank.jpg');">
    <div class="Bloodbank-container">
        <div class="sign-up-container">
            <div class="login-signup">
                @*<a href="Home/UserRegistration">Registration</a>*@
                @Html.ActionLink("Registration", "UserRegistration", "Home")
            </div>
            <div class="signup-align">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                <form name="login">
                    <div class="signup-heading">Login</div>
                    <div class="row">
                        <div class="inline-block">
                            <div class="form-label">
                                Username<span class="required" id="username-info"></span>
                            </div>
                            @Html.TextBoxFor(a => a.username, new { @class = "input-box-330", @placeholder = "User Name" })<br />
                            @Html.ValidationMessageFor(a => a.username, "", new { @class = "error1" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="inline-block">
                            <div class="form-label">
                                Password<span class="required" id="login-password-info"></span>
                            </div>
                            @Html.PasswordFor(a => a.password, new { @class = "input-box-330", @placeholder = "Password" })<br />
                            @Html.ValidationMessageFor(a => a.password, "", new { @class = "error1" })
                        </div>
                    </div>
                    <div class="row">
                        <input class="btn" type="submit" name="login-btn" id="login-btn" value="Login">
                    </div>
                    <span id="txtMsg"></span>
                </form>
                }
            </div>
        </div>
    </div>
</BODY>
</HTML>